# Required Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_APPLICATION_ID=your_discord_application_id_here
LICENSE_KEY=your_license_key_here
DISCORD_CHANNEL_ID=your_notification_discord_channel_id

MAP_URL=https://wanderer.example.com
MAP_NAME=your-map-name
MAP_API_KEY=your_map_token_here

# Optional Feature Control (all default to true except status messages)
# NOTIFICATIONS_ENABLED=true
# KILL_NOTIFICATIONS_ENABLED=true
# SYSTEM_NOTIFICATIONS_ENABLED=true
# CHARACTER_NOTIFICATIONS_ENABLED=true
# ENABLE_STATUS_MESSAGES=false
# TRACK_KSPACE_ENABLED=true
# PRIORITY_SYSTEMS_ONLY=false

# Optional Discord Channels (for specific notification types)
# DISCORD_SYSTEM_CHANNEL_ID=your_system_channel_id
# DISCORD_CHARACTER_CHANNEL_ID=your_character_channel_id
# DISCORD_SYSTEM_KILL_CHANNEL_ID=your_system_kill_channel_id
# DISCORD_CHARACTER_KILL_CHANNEL_ID=your_character_kill_channel_id

# Service URLs (Optional - have sensible defaults)
# WEBSOCKET_URL=ws://host.docker.internal:4004
# WANDERER_KILLS_URL=http://host.docker.internal:4004
# LICENSE_MANAGER_URL=https://lm.wanderer.ltd

# Optional Application Configuration
# PORT=4000
# HOST=localhost
# SCHEME=http
# PUBLIC_URL=http://localhost:4000
# CACHE_DIR=/app/data/cache

# Optional Advanced Configuration
# CHARACTER_EXCLUDE_LIST=character_id1,character_id2
# NOTIFICATION_DEDUP_TTL=1800
# STARTUP_SUPPRESSION_SECONDS=30
# MAX_KILLMAIL_AGE_SECONDS=3600
# NOTIFIER_API_TOKEN=your_api_token_here

# Optional SSE Configuration (for map real-time events)
# SSE_RECONNECT_INITIAL_DELAY=1000
# SSE_RECONNECT_MAX_DELAY=30000
# SSE_EVENT_BUFFER_SIZE=1000

# Optional RedisQ Configuration (legacy killmail source)
# REDISQ_URL=https://zkillredisq.stream/listen.php
# REDISQ_POLL_INTERVAL_MS=1000