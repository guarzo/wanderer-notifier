# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here

# Map Configuration - Two options:
# Option 1: Use MAP_URL_WITH_NAME (recommended)
MAP_URL_WITH_NAME=https://wanderer.example.com/your-map-name
# Option 2: Use separate MAP_URL and MAP_NAME (legacy)
# MAP_URL=https://wanderer.example.com
# MAP_NAME=your-map-name
MAP_TOKEN=your_map_token_here

# License Configuration
LICENSE_KEY=your-license-key-uuid
BOT_API_TOKEN=your-bot-api-token-here  # Only used in development; production uses a constant value

# Web Server Configuration
PORT=8080
HOST=0.0.0.0

# Environment Configuration
MIX_ENV=prod  # Use 'prod' for production, 'dev' for development, 'test' for testing

# Cache Configuration
CACHE_DIR=/app/data/cache  # Directory for cache storage

# Development Overrides (only used in dev environment)
LICENSE_MANAGER_API_URL=http://localhost:8000

# Notification Configuration
# Set to "false" or "0" to disable
# ENABLE_CHARACTER_TRACKING=true
# ENABLE_CHARACTER_NOTIFICATIONS=true
# ENABLE_SYSTEM_NOTIFICATIONS=true

# System Tracking Configuration
# Set to "true" or "1" to track all systems instead of only specific systems
# TRACK_ALL_SYSTEMS=false