# =============================
# Wanderer Notifier Environment Example
# =============================



# --- Required Core Configuration ---
WANDERER_DISCORD_BOT_TOKEN=<token do not prefix with Bot>
WANDERER_LICENSE_KEY=<your license key here>
WANDERER_NOTIFIER_API_TOKEN=<required API token>-
WANDERER_MAP_URL=<your wanderer url>
WANDERER_MAP_NAME=<your map name>
WANDERER_MAP_TOKEN=<token for your map>
WANDERER_DISCORD_CHANNEL_ID=<main discord channel id>

# --- Feature Enablement Flags ---
WANDERER_NOTIFICATIONS_ENABLED=true
WANDERER_KILL_NOTIFICATIONS_ENABLED=true
WANDERER_SYSTEM_NOTIFICATIONS_ENABLED=true
WANDERER_CHARACTER_NOTIFICATIONS_ENABLED=true
WANDERER_FEATURE_TRACK_KSPACE=false

# --- Discord Channel Configuration ---
WANDERER_DISCORD_SYSTEM_KILL_CHANNEL_ID=<system kill notifications channel ID>
WANDERER_DISCORD_CHARACTER_KILL_CHANNEL_ID=<character kill notifications channel ID>
WANDERER_DISCORD_SYSTEM_CHANNEL_ID=<optional system notifications channel>
WANDERER_DISCORD_CHARACTER_CHANNEL_ID=<optional character notifications channel>


# --- Web & Application Configuration ---
WANDERER_PORT=4000
WANDERER_PUBLIC_URL=<optional public url>
WANDERER_HOST=localhost
WANDERER_SCHEME=http

# --- Websocket Configuration ---
WANDERER_WEBSOCKET_ENABLED=true
WANDERER_WEBSOCKET_RECONNECT_DELAY=5000
WANDERER_WEBSOCKET_MAX_RECONNECTS=20
WANDERER_WEBSOCKET_RECONNECT_WINDOW=3600

# --- Character Exclusion ---
WANDERER_CHARACTER_EXCLUDE_LIST=<comma separated character ids to exclude>