{
  "name": "Elixir Dev Container",

  // Build instructions (which Dockerfile, build context, etc.)
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
    // If you have Docker build args, they'd go under "args" here.
  },

  // "runArgs" must be placed at the top level (same level as "build").
  "runArgs": [
    "--add-host=host.docker.internal:host-gateway"
  ],

  // Add port forwarding configuration
  "forwardPorts": [4000],

  // Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "elixir",
  "updateRemoteUserUID": false,

  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },

  "extensions": [
    "JakeBecker.elixir-ls"
  ],

  "postCreateCommand": "mix deps.get"
}
